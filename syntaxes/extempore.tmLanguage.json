{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Extempore",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{ 
			"include": "#operators"
		},
		{
			"include": "#types"
		},
		{
			"include": "#names"
		},
		{
			"include": "#number"
		},
		{
			"include": "#cstring"
		},
		{ 
			"include": "#xtmsymbol"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment",
				"match": ";.*$"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.extempore",
				"match": "\\b(begin|cond|else|or|and|void|lambda|define|if|pref-ptr|aref-ptr|tref-ptr|pfill|tfill|aref|tref|pref|aset|tset|pset|set|while|dotimes|let|bind-func|bind-lib|bind-val|bind-type)\\b"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.extempore",
				"match": "\\b(\\*|\\+)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "entity.name.type.extempore",
				"match": ":[a-zA-Z|/<\\[][a-zA-Z0-9*|/,<>{}\\]]+"
			}]
		},
		"names": {
			"patterns": [{
				"name": "entity.name.extempore",
				"match": "[a-zA-Z][a-zA-Z0-9-_]+"
			}]
		},
		"number": {
			"patterns": [{
				"name": "constant.numeric.extempore",
				"match": "[0-9]+(\\.[0-9]*)?"
			}]
		},
		"cstring": {
			"name": "string.quoted.double.extempore",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.extempore",
					"match": "\\\\."
				}
			]
		},
		"xtmsymbol": {
			"patterns": [{
				"name": "string.quoted.single.extempore",
				"match": "'[^[:space:]()]*"
			}]
		}
	},
	"scopeName": "source.extempore"
}